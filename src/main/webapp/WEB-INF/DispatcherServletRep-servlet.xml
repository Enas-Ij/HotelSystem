<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context.xsd
http://www.springframework.org/schema/mvc
http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <context:component-scan base-package="Controllers" />
    <mvc:annotation-driven/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="views/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <bean id="dataSourceBean" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost/HotelDB"/>
        <property name="username" value="root"/>
        <property name="password" value="root@JEA"/>
    </bean>

    <bean id="jt" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSourceBean"/>
    </bean>

    <bean id="costumerDAO" class="DAO.CostumerDAO" autowire="byName"/>
    <bean id="permissionDAO" class="DAO.PermissionCostumerDAO" autowire="byName"/>
    <bean id="costumerLoginDAO" class="DAO.CostumerLoginDAO" autowire="byName"/>
    <bean id="roomDetailsDAO" class="DAO.RoomDetailsDAO" autowire="byName"/>
    <bean id="roomsDAO" class="DAO.RoomsDAO" autowire="byName"/>
    <bean id="reservationDAO" class="DAO.ReservationDAO" autowire="byName"/>
    <bean id="menuDAO" class="DAO.MenuDAO" autowire="byName"/>
    <bean id="orderDAO" class="DAO.OrderDAO" autowire="byName"/>
    <bean id="orderItemsDAO" class="DAO.OrderItemsDAO" autowire="byName"/>



    <bean id="emailChecker" class="Checkers.EmailChecker" autowire="byName"/>
    <bean id="passwordChecker" class="Checkers.PasswordChecker" autowire="byName"/>
    <bean id="loginTryTimesChecker" class="Checkers.LoginTryTimesChecker" autowire="byName"/>
    <bean id="permissionStringMapper" class="Checkers.PermissionStringMapper" autowire="byName"/>

    <bean id="timeFormat" class="Checkers.TimeFormat" autowire="byName"/>


    <bean id="rooms" class="Room.Rooms" autowire="byName"/>
    <bean id="availableRooms" class="Room.AvailableRooms" autowire="byName"/>
    <bean id="menu" class="Restaurant.Menu" autowire="byName"/>

    <bean id="findRoomControl" class="Controllers.ControlClasses.FindRoomControl" autowire="byName"/>
    <bean id="reservationControl" class="Controllers.ControlClasses.ReservationControl" autowire="byName"/>
    <bean id="viewReservedRoomsControl" class="Controllers.ControlClasses.ViewReservedRoomsControl" autowire="byName"/>
    <bean id="restaurantControl" class="Controllers.ControlClasses.RestaurantControl" autowire="byName"/>
    <bean id="orderPriceControl" class="Controllers.ControlClasses.OrderPriceControl" autowire="byName"/>
    <bean id="orderControl" class="Controllers.ControlClasses.OrderControl" autowire="byName"/>


    <bean id="orderPriceCalculator" class="Restaurant.OrderPriceCalculator" autowire="byName" />


</beans>