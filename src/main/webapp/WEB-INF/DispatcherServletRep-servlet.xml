<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context.xsd
http://www.springframework.org/schema/mvc
http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <context:component-scan base-package="Controllers" />
    <mvc:annotation-driven/>

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="views/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <bean id="dataSourceBean" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost/HotelDB"/>
        <property name="username" value="root"/>
        <property name="password" value="root@JEA"/>
    </bean>

    <bean id="jt" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSourceBean"/>
    </bean>

    <bean id="costumerDAO" class="root.login.dao.CostumerDAO" autowire="byName"/>
    <bean id="permissionDAO" class="root.permission.dao.PermissionCostumerDAO" autowire="byName"/>
    <bean id="costumerLoginDAO" class="root.login.dao.CostumerLoginDAO" autowire="byName"/>
    <bean id="roomDetailsDAO" class="root.reservation.room.dao.RoomDetailsDAO" autowire="byName"/>
    <bean id="roomsDAO" class="root.reservation.room.dao.RoomsDAO" autowire="byName"/>
    <bean id="reservationDAO" class="root.reservation.dao.ReservationDAO" autowire="byName"/>
    <bean id="menuDAO" class="root.restaurant.menu.dao.MenuDAO" autowire="byName"/>
    <bean id="orderDAO" class="root.restaurant.order.dao.OrderDAO" autowire="byName"/>
    <bean id="orderItemsDAO" class="root.restaurant.order.dao.OrderItemsDAO" autowire="byName"/>



    <bean id="emailChecker" class="Checkers.EmailChecker" autowire="byName"/>
    <bean id="passwordChecker" class="Checkers.PasswordChecker" autowire="byName"/>
    <bean id="loginTryTimesChecker" class="Checkers.LoginTryTimesChecker" autowire="byName"/>
    <bean id="permissionStringMapper" class="root.permission.PermissionStringMapper" autowire="byName"/>

    <bean id="timeFormat" class="Checkers.TimeFormat" autowire="byName"/>


    <bean id="rooms" class="room.Rooms" autowire="byName"/>
    <bean id="availableRooms" class="room.AvailableRooms" autowire="byName"/>
    <bean id="menu" class="root.restaurant.Menu" autowire="byName"/>

    <bean id="findRoomControl" class="root.reservation.service.FindRoomService" autowire="byName"/>
    <bean id="reservationControl" class="root.reservation.service.ReservationService" autowire="byName"/>
    <bean id="viewReservedRoomsControl" class="root.reservation.reserved.rooms.service.ViewReservedRoomsService" autowire="byName"/>
    <bean id="restaurantControl" class="root.restaurant.service.RestaurantService" autowire="byName"/>
    <bean id="orderPriceControl" class="root.restaurant.order.service.OrderPriceService" autowire="byName"/>
    <bean id="orderControl" class="root.restaurant.order.service.OrderService" autowire="byName"/>


    <bean id="orderPriceCalculator" class="root.restaurant.order.OrderPriceCalculator" autowire="byName" />


</beans>